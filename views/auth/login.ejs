<div class="col-12">
  <div class="card rounded-3 shadow position-absolute top-50 start-50 translate-middle" style="border-radius: 30px !important;">
    <div class="m-5 p-3" style="width: 300px;">
      <h1 class="text-center mb-3"> Login </h1>
      <%- include ('../partials/messages') %>
      <form action="/users/login" method="POST">
        
        <label for="email" style="font-size: 15px;">Email</label>
        <div class="">
          <input class="form-control" type="email" name="email" placeholder="Enter Email"/>
        </div>
        
        <label for="password" style="font-size: 15px;">Password</label>
        <div class="">
          <input class="form-control" type="password" name="password" placeholder="Enter Password"/>  
        </div>
  
        <div class="text-center">
          <button type="submit" class="btn btn-dark w-100">Login</button>
        </div>
  
      </form>
      
      <a class="link-dark mx-3" href="/users/register">Register</a>
  
    </div>
  </div>
</div>

