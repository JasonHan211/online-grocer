<div class="col-12">
  <div class="card rounded-3 shadow position-absolute top-50 start-50 translate-middle" style="border-radius: 30px !important;">
    <div class="m-5 p-3" style="width: 300px;">
      <h1 class="text-center mb-3">Register</h1>
      <%- include ('../partials/messages') %>
      <form action="/users/register" method="POST">
        
        <label for="name" style="font-size: 15px;">Name</label>
        <div class="">
          <input class="form-control" type="name" name="name" placeholder="Enter Name" value="<%= typeof info.name != 'undefined' ? info.name : '' %>"/>
        </div>
        
        <label for="email" style="font-size: 15px;">Email</label>
        <div class="">
          <input class="form-control" type="email" name="email" placeholder="Enter Email" value="<%= typeof info.email != 'undefined' ? info.email : '' %>"/>
        </div>
  
        <label for="password" style="font-size: 15px;">Password</label>
        <div class="">
          <input class="form-control" type="password" name="password" placeholder="Create Password" value="<%= typeof info.password != 'undefined' ? info.password : '' %>"/>
        </div>
        
        <label for="password2" style="font-size: 15px;">Confirm Password</label>
        <div class="">
          <input class="form-control" type="password" name="password2" placeholder="Confirm Password" value="<%= typeof info.password2 != 'undefined' ? info.password2 : '' %>"/>
        </div>
        
        <label for="address" style="font-size: 15px;">Address</label>
        <div class="">
          <input class="form-control" type="text" name="address" placeholder="Address" value="<%= typeof info.address != 'undefined' ? info.address : '' %>"/>
        </div>

        <label for="referralCode" style="font-size: 15px;">Referral Code</label>
        <div class="">
          <input class="form-control" type="password" name="referralCode" placeholder="Referral Code" value="<%= typeof info.referralCode != 'undefined' ? info.referralCode : '' %>"/>
        </div>
  
        <button type="submit" class="btn btn-dark w-100"> Register </button>
  
      </form>
  
      <a class="link-dark mx-3" href="/users/login"> Login</a>
  
    </div>
  </div>
</div>
